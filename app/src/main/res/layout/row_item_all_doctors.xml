<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_All_Users"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="#fff"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:id="@+id/Ly_Section_CardView_All_Users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNameAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:padding="3dp"
                android:text="Houssam cheriet"
                android:textColor="#000"
                android:textSize="20sp"

                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_EmailAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:autoLink="all"
                android:clickable="true"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="3dp"
                android:text="houssamcheriet01@gmail.com"
                android:textColor="#2196F3"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/Text_RegDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:paddingRight="5dp"
                android:textColor="#000"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/textPhoneAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="0666666666"
                android:textAlignment="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textGenderAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="male"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textSpecialtyAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="None"
                android:textAlignment="center"
                android:textColor="#000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:autoLink="all"
                android:background="@color/material_dynamic_neutral_variant20"
                android:clickable="true"
                android:padding="3dp"
                android:text="RESERVATIONS"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:autoLink="all"
                android:background="@android:color/holo_green_dark"
                android:clickable="true"
                android:padding="3dp"
                android:text="EDIT"
                android:textAlignment="center"
                android:textColor="@color/browser_actions_bg_grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:autoLink="all"
                android:background="@android:color/holo_red_light"
                android:clickable="true"
                android:padding="3dp"
                android:text="DELETE"
                android:textAlignment="center"
                android:textColor="@color/browser_actions_bg_grey"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>